{
  "ignition": {
    "version": "3.5.0"
  },
  "passwd": {
    "users": [
      {
        "name": "core",
        "sshAuthorizedKeys": [
          "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAICiUB1MgFciQ63LsGGBwHVjCtf1cn50BdxN9jTtfTPGF rize@legion"
        ]
      }
    ]
  },
  "storage": {
    "directories": [
      {
        "group": {
          "name": "core"
        },
        "path": "/var/home/core/config",
        "user": {
          "name": "core"
        }
      },
      {
        "group": {
          "name": "core"
        },
        "path": "/var/home/core/media",
        "user": {
          "name": "core"
        }
      }
    ],
    "files": [
      {
        "group": {
          "name": "core"
        },
        "path": "/var/home/core/backup.sh",
        "user": {
          "name": "core"
        },
        "contents": {
          "source": "https://raw.githubusercontent.com/navaneeth-dev/fluxcd-homelab/refs/heads/main/coreos/backup.sh"
        },
        "mode": 484
      },
      {
        "path": "/etc/containers/systemd/jellyfin.container",
        "contents": {
          "compression": "gzip",
          "source": "data:;base64,"
        }
      },
      {
        "path": "/etc/containers/systemd/jdownloader.container",
        "contents": {
          "compression": "gzip",
          "source": "data:;base64,"
        }
      }
    ]
  },
  "systemd": {
    "units": [
      {
        "contents": "[Unit]\nDescription=Run restic backup\n\n[Service]\nType=oneshot\nExecStart=/var/home/core/backup.sh",
        "name": "restic.service"
      },
      {
        "contents": "[Unit]\nDescription=Run restic.service every 10 minutes\n\n[Timer]\nOnCalendar=*-*-* 4:00:00\n\n[Install]\nWantedBy=timers.target",
        "enabled": true,
        "name": "restic.timer"
      }
    ]
  }
}
